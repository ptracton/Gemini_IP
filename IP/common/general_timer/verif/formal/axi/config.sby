[options]
mode prove
depth 20

[engines]
smtbmc z3

[script]
read -formal timer_props.sv
read -formal timer_regs.sv
read -formal timer_core.sv
read -formal timer_axi.sv
read -formal timer_binds.sv
prep -top timer_axi

[files]
../../rtl/verilog/timer_regs.sv
../../rtl/verilog/timer_core.sv
